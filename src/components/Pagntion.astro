---
import type { Page } from 'astro';
import ArrowUp from './icons/ArrowUp.astro';
import Button from './ui/button.astro';
interface Props {
  page: Page;
}
const { page } = Astro.props;
---

<div class='flex justify-around mt-10'>
  {
    page.url.prev ? (
      <Button>
        <a
          href={page.url.prev}
          class='flex font-bold justify-center items-center rounded-full hover:-translate-x-1 transition-transform duration-150 ease-in-out gap-1 group'
          rel='noopener noreferrer'
        >
          <span class='group-hover:-rotate-[135deg] transition-transform duration-250 ease-in-out -rotate-90'>
            <ArrowUp width='18' height='18' />
          </span>
          Previous
        </a>
      </Button>
    ) : null
  }
  {
    page.url.next ? (
      <Button>
        <a
          href={page.url.next}
          class='flex font-bold justify-center items-center rounded-full hover:translate-x-1 transition-transform duration-150 ease-in-out gap-1 group'
          rel='noopener noreferrer'
        >
          Next
          <span class='group-hover:rotate-45  transition-transform duration-250 ease-in-out'>
            <ArrowUp width='18' height='18' />
          </span>
        </a>
      </Button>
    ) : null
  }
</div>
